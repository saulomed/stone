<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
<!-- Tela  Principal -->
	<navigation-rule>
		<from-view-id>/pages/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>managerAnswer</from-outcome>
			<to-view-id>/pages/createTransaction.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>managerTransaction</from-outcome>
			<to-view-id>/pages/managerTransactions.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<application>
		<resource-bundle>
			<base-name>br.com.stone.autorizador.messages</base-name>
			<var>i18n</var>
		</resource-bundle>
	</application>
</faces-config>
